<Controls:MetroWindow x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:local="clr-namespace:Traveller_Tools"
        mc:Ignorable="d"
        Title="Travller GM Tools" Height="750" Width="1200" Foreground="Red" Background="Black" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">


    <!-- Data Bindings for the tables -->
    <Window.Resources>
        <local:Traveller_System_DataDataSet x:Key="Traveller_System_DataDataSet"/>
        <CollectionViewSource x:Key="System_MasterViewSource" Source="{Binding System_Master, Source={StaticResource Traveller_System_DataDataSet}}"/>
    </Window.Resources>


    <!-- Definition for the MainGrid that controls the layout of the entire window -->
    <Grid x:Name="MainGrid" Width="1180" Height="710" Margin="10,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="600*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>



        <!--  __________________________________________________________________________________________________________________________________ -->
        <!-- START SYSTEM INFO HEADER ROW -->
        <Grid x:Name="SystemBar" HorizontalAlignment="Left" Height="40" Margin="0,0,-300,0" Width="1180" Grid.ColumnSpan="2" Background="#FF660B02" VerticalAlignment="Center">

            <Grid.RowDefinitions>
                <RowDefinition Height="40*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="175"/>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="175"/>
                <ColumnDefinition Width="65"/>
                <ColumnDefinition Width="175"/>
                <ColumnDefinition Width="90"/>
                <ColumnDefinition Width="175"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="150*"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="systemBox" HorizontalAlignment="Left" Height="40" TextWrapping="Wrap" Text="System" VerticalAlignment="Center" Width="60" FontFamily="Oregon LDO Black" FontSize="16" FontWeight="Bold" Foreground="White" IsReadOnly="True" Margin="0" Background="{x:Null}" BorderBrush="{x:Null}" BorderThickness="0"/>
            <Grid x:Name="systemName" Grid.Column="1" DataContext="{StaticResource System_MasterViewSource}" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Center" Height="40" Width="175">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <ComboBox x:Name="NameComboBox" Grid.Column="1" DisplayMemberPath="Name" HorizontalAlignment="Left" Height="35" ItemsSource="{Binding}" Margin="2,2,0,0" Grid.Row="0" VerticalAlignment="Center" Width="170" FontSize="16">
                    <ComboBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel/>
                        </ItemsPanelTemplate>
                    </ComboBox.ItemsPanel>
                </ComboBox>
            </Grid>

            <TextBox x:Name="UWPBox" HorizontalAlignment="Left" Height="40" TextWrapping="Wrap" Text="UWP:" VerticalAlignment="Center" Width="60" Margin="0" Grid.Column="2" FontFamily="Oregon LDO Black" FontSize="16" FontWeight="Bold" Foreground="White" IsReadOnly="True" Background="{x:Null}" BorderBrush="{x:Null}" BorderThickness="0"/>
            <Grid x:Name="gUWPBox" Grid.Column="3" DataContext="{StaticResource System_MasterViewSource}" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Center" Height="40" Width="175">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBox x:Name="UWPTextBox" Grid.Column="1" HorizontalAlignment="Left" Height="40" Margin="0" Grid.Row="0" Text="{Binding UWP, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="170" FontFamily="Oregon LDO Black" FontSize="21.333" FontWeight="Bold" Foreground="White" Background="{x:Null}" BorderBrush="{x:Null}"/>
            </Grid>

            <TextBox x:Name="sectorBox" HorizontalAlignment="Left" Height="40" TextWrapping="Wrap" Text="Sector:" VerticalAlignment="Center" Width="70" Margin="0" Grid.Column="4" FontFamily="Oregon LDO Black" FontSize="16" FontWeight="Bold" Foreground="White" IsReadOnly="True" Background="{x:Null}" BorderBrush="{x:Null}" BorderThickness="0"/>
            <Grid x:Name="gSectorBox" Grid.Column="5" DataContext="{StaticResource System_MasterViewSource}" Margin="0" VerticalAlignment="Center" Width="175" HorizontalAlignment="Left" Height="40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBox x:Name="SectorTextBox" Grid.Column="1" HorizontalAlignment="Left" Height="40" Margin="0" Grid.Row="0" Text="{Binding Sector, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="170" FontFamily="Oregon LDO Black" FontSize="21.333" FontWeight="Bold" Foreground="White" Background="{x:Null}" BorderBrush="{x:Null}"/>
            </Grid>

            <TextBox x:Name="subBox" HorizontalAlignment="Left" Height="40" TextWrapping="Wrap" Text="Subsector:" VerticalAlignment="Center" Width="110" Margin="0" Grid.Column="6" FontFamily="Oregon LDO Black" FontSize="16" FontWeight="Bold" Foreground="White" IsReadOnly="True" Background="{x:Null}" BorderBrush="{x:Null}" BorderThickness="0"/>
            <Grid x:Name="gSubsectorBox" Grid.Column="7" DataContext="{StaticResource System_MasterViewSource}" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Center" Height="40" Width="175">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBox x:Name="SubsectorTextBox" Grid.Column="1" HorizontalAlignment="Left" Height="40" Margin="0" Grid.Row="0" Text="{Binding subName, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="170" FontFamily="Oregon LDO Black" FontSize="21.333" FontWeight="Bold" Foreground="White" Background="{x:Null}" BorderBrush="{x:Null}"/>
            </Grid>

            <TextBox x:Name="hexBox" HorizontalAlignment="Left" Height="40" TextWrapping="Wrap" Text="Hex:" VerticalAlignment="Center" Width="45" Margin="0" Grid.Column="8" FontFamily="Oregon LDO Black" FontSize="16" FontWeight="Bold" Foreground="White" IsReadOnly="True" Background="{x:Null}" BorderBrush="{x:Null}" BorderThickness="0"/>
            <Grid x:Name="gHexBox" Grid.Column="9" DataContext="{StaticResource System_MasterViewSource}" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Center" Height="40" Width="150">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBox x:Name="HexTextBox" Grid.Column="1" HorizontalAlignment="Left" Height="40" Margin="0" Grid.Row="0" Text="{Binding Hex, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="145" FontFamily="Oregon LDO Black" FontSize="21.333" FontWeight="Bold" Foreground="White" Background="{x:Null}" BorderBrush="{x:Null}"/>
            </Grid>
        </Grid>

        <!--  __________________________________________________________________________________________________________________________________ -->
        <!-- START OF TAB CONTROLS for System Information -->

        <TabControl x:Name="systemTabs" Height="670" Width="1180" Grid.Row="1" Padding="0" HorizontalAlignment="Left" VerticalAlignment="Top" VerticalContentAlignment="Top">

            <!--  __________________________________________________________________________________________________________________________________ -->
            <!-- Overview Tab -->
            <TabItem Header="Overview" Controls:ControlsHelper.HeaderFontSize="18" Padding="10,5" BorderThickness="1">
                <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Width="1170" Height="650" d:IsLocked="True">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="620"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid x:Name="SystemDetails" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" Width="625" Height="650">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <!-- Starport Row -->
                            <RowDefinition Height="50"/>
                            <!-- Size Row -->
                            <RowDefinition Height="50"/>
                            <!-- Atmosphere Row -->
                            <RowDefinition Height="50"/>
                            <!-- Hydrosphere Row -->
                            <RowDefinition Height="50"/>
                            <!-- Population Row -->
                            <RowDefinition Height="150"/>
                            <!-- Government Row -->
                            <RowDefinition Height="150"/>
                            <!-- Law Level Row -->
                            <RowDefinition Height="50"/>
                            <!-- Tech Level Row -->
                            <RowDefinition Height="5*"/>
                            <!-- Buffer -->
                        </Grid.RowDefinitions>

                        <!--  __________________________________________________________________________________________________________________________________ -->
                        <!-- Start of the section where each row of the UWP is detailed out -->
                        <!-- STARPORT ROW -->
                        <Grid x:Name="starportRow" HorizontalAlignment="Left" VerticalAlignment="Center" Width="620" Height="45">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="55"/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="125"/>
                                <ColumnDefinition Width="125"/>
                                <ColumnDefinition Width="125"/>
                                <ColumnDefinition Width="125"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="portValue" HorizontalAlignment="Left" Height="44" Margin="0" TextWrapping="Wrap" Text="Port:" VerticalAlignment="Center" Width="50" BorderBrush="Red" FontWeight="Bold" FontSize="16"/>
                            <Grid x:Name="gPortVal" Grid.Column="1" DataContext="{StaticResource System_MasterViewSource}" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" Height="44" Width="45">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBox x:Name="PORTTextBox" Grid.Column="1" HorizontalAlignment="Center" Height="44" Margin="0" Grid.Row="0" Text="{Binding PORT, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="45" FontWeight="Bold" FontFamily="Oregon LDO Black" FontSize="24" BorderBrush="Red" IsReadOnly="True"/>
                            </Grid>

                            <Grid x:Name="gPortDesc" Grid.Column="2" DataContext="{StaticResource System_MasterViewSource}" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" Width="125" Height="44">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto" MinWidth="105"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="20"/>
                                    <RowDefinition Height="25"/>
                                </Grid.RowDefinitions>
                                <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="19" TextWrapping="Wrap" Text="Berthing" VerticalAlignment="Top" Width="120" FontSize="10.667" Background="#00000000" Foreground="Red" BorderBrush="Red" BorderThickness="1,1,1,0"/>
                                <TextBox x:Name="PortDescTextBox" HorizontalAlignment="Left" Height="25" Margin="0" Text="{Binding portDesc, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Bottom" Width="120" Grid.Row="1" BorderBrush="Red" BorderThickness="1,0,1,1" IsReadOnly="True"/>
                            </Grid>

                            <Grid x:Name="gPortFuel" Grid.Column="3" DataContext="{StaticResource System_MasterViewSource}" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" Width="125" Height="44">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="19"/>
                                    <RowDefinition Height="25"/>
                                </Grid.RowDefinitions>
                                <TextBox x:Name="textBox_Copy" HorizontalAlignment="Left" Height="19" TextWrapping="Wrap" Text="Fuel" VerticalAlignment="Top" Width="120" FontSize="10.667" Background="#00000000" Foreground="Red" BorderBrush="Red" BorderThickness="1,1,1,0"/>
                                <TextBox x:Name="PortFuelTextBox" HorizontalAlignment="Left" Height="25" Margin="0" Grid.Row="1" Text="{Binding portFuel, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120" BorderBrush="Red" BorderThickness="1,0,1,1" IsReadOnly="True"/>
                            </Grid>

                            <Grid x:Name="gPortRepairs" Grid.Column="4" DataContext="{StaticResource System_MasterViewSource}" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" Width="250" Height="44" Grid.ColumnSpan="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="19"/>
                                    <RowDefinition Height="25"/>
                                </Grid.RowDefinitions>
                                <TextBox x:Name="textBox_Copy1" HorizontalAlignment="Left" Height="19" TextWrapping="Wrap" Text="Repairs" VerticalAlignment="Top" Width="245" FontSize="10.667" Background="#00000000" Foreground="Red" BorderBrush="Red" BorderThickness="1,1,1,0"/>
                                <TextBox x:Name="PortRepairsTextBox" HorizontalAlignment="Left" Height="25" Margin="0" Grid.Row="1" Text="{Binding portRepairs, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Top" Width="245" BorderThickness="1,0,1,1" BorderBrush="Red" IsReadOnly="True"/>
                            </Grid>
                        </Grid>

                        <!--  __________________________________________________________________________________________________________________________________ -->
                        <!-- SIZE ROW __________________________________________________________________________________________________________________________________ -->
                        <Grid x:Name="sizeRow" HorizontalAlignment="Left" VerticalAlignment="Top" Width="620" Height="45" Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="55"/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="125"/>
                                <ColumnDefinition Width="125"/>
                                <ColumnDefinition Width="125"/>
                                <ColumnDefinition Width="125"/>

                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="sizeValue" HorizontalAlignment="Left" Height="44" Margin="0" TextWrapping="Wrap" Text="Size:" VerticalAlignment="Center" Width="50" BorderBrush="Red" FontWeight="Bold" FontSize="16"/>
                            <Grid x:Name="gSizeVal" Grid.Column="1" DataContext="{StaticResource System_MasterViewSource}" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" Height="44" Width="45">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBox x:Name="SZETextBox" Grid.Column="1" HorizontalAlignment="Center" Height="44" Margin="0" Grid.Row="0" Text="{Binding SZE, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="45" FontWeight="Bold" FontFamily="Oregon LDO Black" FontSize="24" BorderBrush="Red" IsReadOnly="True"/>
                            </Grid>

                            <Grid x:Name="gSizeDiameter" Grid.Column="2" DataContext="{StaticResource System_MasterViewSource}" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" Width="125" Height="44">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto" MinWidth="105"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="20"/>
                                    <RowDefinition Height="25"/>
                                </Grid.RowDefinitions>
                                <TextBox x:Name="textBoxDiameter" HorizontalAlignment="Left" Height="19" TextWrapping="Wrap" Text="Diameter" VerticalAlignment="Top" Width="120" FontSize="10.667" Background="#00000000" Foreground="Red" BorderBrush="Red" BorderThickness="1,1,1,0"/>
                                <TextBox x:Name="SizeDiameterTextBox" HorizontalAlignment="Left" Height="25" Margin="0" Text="{Binding sizeDiameter, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Bottom" Width="120" Grid.Row="1" BorderBrush="Red" BorderThickness="1,0,1,1" IsReadOnly="True"/>
                            </Grid>

                            <Grid x:Name="gSizeDesc" Grid.Column="3" DataContext="{StaticResource System_MasterViewSource}" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" Width="250" Height="44" Grid.ColumnSpan="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="19"/>
                                    <RowDefinition Height="25"/>
                                </Grid.RowDefinitions>
                                <TextBox x:Name="textBoxDesc" HorizontalAlignment="Left" Height="19" TextWrapping="Wrap" Text="Description" VerticalAlignment="Top" Width="245" FontSize="10.667" Background="#00000000" Foreground="Red" BorderBrush="Red" BorderThickness="1,1,1,0"/>
                                <TextBox x:Name="SizeDescTextBox" HorizontalAlignment="Left" Height="25" Margin="0" Grid.Row="1" Text="{Binding sizeDesc, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="245" BorderBrush="Red" BorderThickness="1,0,1,1" IsReadOnly="True"/>
                            </Grid>

                            <Grid x:Name="gSizeGravity" Grid.Column="5" DataContext="{StaticResource System_MasterViewSource}" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" Width="125" Height="44">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="19"/>
                                    <RowDefinition Height="25"/>
                                </Grid.RowDefinitions>
                                <TextBox x:Name="textBoxSizeGrav" HorizontalAlignment="Left" Height="19" TextWrapping="Wrap" Text="Gravity" VerticalAlignment="Top" Width="120" FontSize="10.667" Background="#00000000" Foreground="Red" BorderBrush="Red" BorderThickness="1,1,1,0"/>
                                <TextBox x:Name="SizeGravTextBox" HorizontalAlignment="Left" Height="25" Margin="0" Grid.Row="1" Text="{Binding sizeGrav, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Top" Width="120" BorderThickness="1,0,1,1" BorderBrush="Red" IsReadOnly="True"/>
                            </Grid>
                        </Grid>

                        <!--  __________________________________________________________________________________________________________________________________ -->
                        <!-- ATMOSPHERE ROW-->
                        <Grid x:Name="atmoRow" HorizontalAlignment="Left" VerticalAlignment="Top" Width="620" Height="45" Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="55"/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="125"/>
                                <ColumnDefinition Width="125"/>
                                <ColumnDefinition Width="125"/>
                                <ColumnDefinition Width="125"/>

                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="atmoValue" HorizontalAlignment="Left" Height="44" Margin="0" TextWrapping="Wrap" Text="ATM" VerticalAlignment="Center" Width="50" BorderBrush="Red" FontWeight="Bold" FontSize="16"/>
                            <Grid x:Name="gAtmoVal" Grid.Column="1" DataContext="{StaticResource System_MasterViewSource}" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" Height="44" Width="45">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBox x:Name="ATMOTextBox" Grid.Column="1" HorizontalAlignment="Center" Height="44" Margin="0" Grid.Row="0" Text="{Binding ATM, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="45" FontWeight="Bold" FontFamily="Oregon LDO Black" FontSize="24" BorderBrush="Red" IsReadOnly="True"/>
                            </Grid>

                            <Grid x:Name="gAtmoDesc" Grid.Column="2" DataContext="{StaticResource System_MasterViewSource}" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" Width="125" Height="44">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto" MinWidth="105"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="20"/>
                                    <RowDefinition Height="25"/>
                                </Grid.RowDefinitions>
                                <TextBox x:Name="textBoxAtmoDesc" HorizontalAlignment="Left" Height="19" TextWrapping="Wrap" Text="Description" VerticalAlignment="Top" Width="120" FontSize="10.667" Background="#00000000" Foreground="Red" BorderBrush="Red" BorderThickness="1,1,1,0"/>
                                <TextBox x:Name="AtmoDescTextBox" HorizontalAlignment="Left" Height="25" Margin="0" Text="{Binding AtmoDesc, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Bottom" Width="120" Grid.Row="1" BorderBrush="Red" BorderThickness="1,0,1,1" IsReadOnly="True"/>
                            </Grid>

                            <Grid x:Name="gAtmoNotes" Grid.Column="3" DataContext="{StaticResource System_MasterViewSource}" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" Width="250" Height="44" Grid.ColumnSpan="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="19"/>
                                    <RowDefinition Height="25"/>
                                </Grid.RowDefinitions>
                                <TextBox x:Name="textBoxAtmoNotes" HorizontalAlignment="Left" Height="19" TextWrapping="Wrap" Text="Notes" VerticalAlignment="Top" Width="245" FontSize="10.667" Background="#00000000" Foreground="Red" BorderBrush="Red" BorderThickness="1,1,1,0"/>
                                <TextBox x:Name="AtmoNotesTextBox" HorizontalAlignment="Left" Height="25" Margin="0" Grid.Row="1" Text="{Binding AtmoNotes, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="245" BorderBrush="Red" BorderThickness="1,0,1,1" IsReadOnly="True"/>
                            </Grid>
                            <Grid x:Name="Grid10" Grid.Column="5" DataContext="{StaticResource System_MasterViewSource}" HorizontalAlignment="Left" Margin="65,24,0,0" VerticalAlignment="Top">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                            </Grid>
                        </Grid>

                        <!--  __________________________________________________________________________________________________________________________________ -->
                        <!-- HYDROSPHERE ROW -->
                        <Grid x:Name="hyrdoRow" HorizontalAlignment="Left" VerticalAlignment="Top" Width="620" Height="44" Grid.Row="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="55"/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="125"/>
                                <ColumnDefinition Width="125"/>
                                <ColumnDefinition Width="125"/>
                                <ColumnDefinition Width="125"/>

                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="hydroValue" HorizontalAlignment="Left" Height="44" Margin="0" TextWrapping="Wrap" Text="HYD" VerticalAlignment="Center" Width="50" BorderBrush="Red" FontWeight="Bold" FontSize="16"/>
                            <Grid x:Name="gHydroVal" Grid.Column="1" DataContext="{StaticResource System_MasterViewSource}" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" Height="44" Width="45">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBox x:Name="HYDROTextBox" Grid.Column="1" HorizontalAlignment="Center" Height="44" Margin="0" Grid.Row="0" Text="{Binding HYD, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="45" FontWeight="Bold" FontFamily="Oregon LDO Black" FontSize="24" BorderBrush="Red" IsReadOnly="True"/>
                            </Grid>

                            <Grid x:Name="gHydroCoverage" Grid.Column="2" DataContext="{StaticResource System_MasterViewSource}" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" Width="125" Height="44">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto" MinWidth="105"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="20"/>
                                    <RowDefinition Height="25"/>
                                </Grid.RowDefinitions>
                                <TextBox x:Name="textBoxHydroCov" HorizontalAlignment="Left" Height="19" TextWrapping="Wrap" Text="Coverage" VerticalAlignment="Top" Width="120" FontSize="10.667" Background="#00000000" Foreground="Red" BorderBrush="Red" BorderThickness="1,1,1,0"/>
                                <TextBox x:Name="HydroCovTextBox" HorizontalAlignment="Left" Height="25" Margin="0" Text="{Binding hydroCoverage, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Bottom" Width="120" Grid.Row="1" BorderBrush="Red" BorderThickness="1,0,1,1" IsReadOnly="True"/>
                            </Grid>

                            <Grid x:Name="gHydroDesc" Grid.Column="3" DataContext="{StaticResource System_MasterViewSource}" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" Width="250" Height="44" Grid.ColumnSpan="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="19"/>
                                    <RowDefinition Height="25"/>
                                </Grid.RowDefinitions>
                                <TextBox x:Name="textBoxHydroDesc" HorizontalAlignment="Left" Height="19" TextWrapping="Wrap" Text="Description" VerticalAlignment="Top" Width="245" FontSize="10.667" Background="#00000000" Foreground="Red" BorderBrush="Red" BorderThickness="1,1,1,0"/>
                                <TextBox x:Name="HydroDescTextBox" HorizontalAlignment="Left" Height="25" Margin="0" Grid.Row="1" Text="{Binding hydroDesc, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="245" BorderBrush="Red" BorderThickness="1,0,1,1" IsReadOnly="True"/>
                            </Grid>
                        </Grid>

                        <!--  __________________________________________________________________________________________________________________________________ -->
                        <!-- POPULATIONS ROW -->
                        <Grid x:Name="popRow" HorizontalAlignment="Left" VerticalAlignment="Top" Width="620" Height="44" Grid.Row="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="55"/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="125"/>
                                <ColumnDefinition Width="125"/>
                                <ColumnDefinition Width="125"/>
